#!/bin/bash
set -o xtrace

ffmpeg=./bin/ffmpeg
input=$(find {{video.directory}} -regex '{{video.movies}}' -print -quit)
{% if video.subtitles %}
subs=$(find {{video.directory}} -regex '{{video.subtitles}}' -print -quit)
{% else %}
subs=""
{% endif %}
if [ "$subs" != "" ]; then
vf_subs=",subtitles='$subs':force_style='FontSize=24,FontName=Verdana'"
else
vf_subs=""
fi

{% if ":" in docker.ports["rtmp.port"] %}
rtmp_url="rtmp://{{ docker.ports["rtmp.port"] }}/{{hls.rtmp.application}}"
{% else %}
rtmp_url="rtmp://127.0.0.1:{{docker.ports["rtmp.port"] }}/{{hls.rtmp.application}}"
{% endif %}

rtmp_key="{{video.id}}"

libx264_settings="-profile:v high -level 4.1 -framerate 30 -maxrate {{video.libx264.maxrate}} -bufsize {{video.libx264.bufsize}} -x264-params keyint={{video.libx264.keyint}}"
scale720p="(iw*sar)*min(1280/(iw*sar)\,720/ih):ih*min(1280/(iw*sar)\,720/ih), pad=1280:720:(1280-iw*min(1280/iw\,720/ih))/2:(720-ih*min(1280/iw\,720/ih))/2"
scale1080p="(iw*sar)*min(1920/(iw*sar)\,1080/ih):ih*min(1920/(iw*sar)\,1080/ih), pad=1920:1080:(1920-iw*min(1920/iw\,1080/ih))/2:(1080-ih*min(1920/iw\,1080/ih))/2"

$ffmpeg -re -i "$input" -ac 2 \
	-c:v libx264 $libx264_settings -tune zerolatency -crf {{video.libx264.crf}} \
	-vf scale="$scale720p"$vf_subs \
	-c:a aac -ab {{video.aac.bitrate}} \
	-strict experimental \
	-f flv "$rtmp_url"/"$rtmp_key"

